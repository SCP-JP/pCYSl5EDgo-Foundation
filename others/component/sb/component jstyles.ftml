[[module css]]

div.pseudo-tags ul {
    font-size: 85%;
    border-top: 1px solid #BBB;
    display: inline-block;
    margin: 10px 0 0;
    padding: 0 2px;
    list-style: none;
}

div.pseudo-tags li {
    color: #b01;
    text-decoration: none;
    display: inline-block;
    margin: 0 1px;
    cursor: pointer;
}

div.pseudo-tags li:hover {
    text-decoration: underline;
}
#page-content span[style$="new"] {
  display: inline-block;
  background: #eaffea;
}
#page-content span[style$="new"]::before {
  padding-left: 5px;
  content: "+ ";
  color: #55cc55;
}
#page-content span[style$="new"]::after {
  content: " ";
  padding-right: 5px;
}
#page-content span[style$="old"] {
  display: inline-block;
  background: #ffecec;
}
#page-content span[style$="old"]::before {
  padding-left: 5px;
  content: "- ";
  color: #da5757;
}
#page-content span[style$="old"]::after {
  content: " ";
  padding-right: 5px;
}
#page-content .new {
  display: inline-block;
  margin-right: 5px;
  background: #eaffea;
}
#page-content .new::before {
  padding-left: 5px;
  content: "+ ";
  color: #55cc55;
}
#page-content .new::after {
  content: " ";
  padding-right: 5px;
}
#page-content .old {
  display: inline-block;
  margin-right: 5px;
  background: #ffecec;
}
#page-content .old::before {
  padding-left: 5px;
  content: "- ";
  color: #da5757;
}
#page-content .old::after {
  content: " ";
  padding-right: 5px;
}
