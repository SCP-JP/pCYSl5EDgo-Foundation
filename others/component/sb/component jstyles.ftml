.henoji:before {
    content: "へ";
    color: rgba(51,51,51,1.0);
    opacity: 1;
    transform: scale(1.9,1)rotateX(180deg) translateY(-0.08em);
    position: absolute;
    display: inline-block;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    z-index: 1;
}

.henoji {
    position: relative;
    width: 1em;
    white-space: pre;
    display: inline-block;
    padding: 0 .5em;
    color: rgba(51,51,51,0);
}

.dhenoji:before {
    content: "へ";
    color: rgba(51,51,51,1.0);
