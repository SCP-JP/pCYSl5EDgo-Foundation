.reddel {
    position: relative;
}

.reddel:before {
    content: ' ';
    display: block;
    position: absolute;
    right: 0;
    left: 0;
    top: 40%;
    bottom: 40%;
    border-top: 1px solid red;
    border-bottom: 1px solid red;
}

