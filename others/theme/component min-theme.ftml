#header {
height: 0;
background: none;
}
#login-status > a > strong {
display: none;
}
div#container-wrap {
background: none;
}
#header h1{
display: none;
}
#header h2{
display: none;
}
#top-bar{
display: none;
}
#search-top-box{
display: none;
}
#page-title{
display: none;
}
#login-status {
filter: grayscale();
}
#main-content {
margin: auto;
padding: 0 1em 1em 1em;
}
#side-bar{
display: none;
}
.contents{
padding-left:1em;
}
#content-wrap {
max-width: 780px;
}
*{
    color: #707070;
}
p{
    margin-top: 1.5em;
    line-height: 180%;
}
.break{
    display: inline-block;
    color:#707070;
}
.thin{
    font-family:Helvetica Neue, Helvetica, Arial, sans-serif;
    font-weight:100;
}
.scplogo{
    max-width: 90px;
}
