[[module css]]

.system-pagestate-ctrl hr {
    display: none;
}

.system-title,
.sb3-custom-infoblock .infoblock-title {
    font-weight: normal;
}

.sb3-custom-infoblock .infoblock-title {
    width: 10em;
    padding: 3px;
    border-bottom: solid #333 1px;
    font-size: 170%;
}

.sb3-custom-infoblock .fa-info-circle::before {
    font-size: 120%;
    padding-right: 3px;
    font-weight: bold;
    font-family: "FontAwesome";
}

.sb3-custom-infoblock .infoblock-insidewrapper {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
    align-content: flex-start;
    font-size: 120%;
}

.sb3-custom-infoblock .infoblock-insidewrapper .infoblock-item {
    flex-grow: 0;
    flex-shrink: 0;
    flex-basis: auto;
    align-self: auto;
    margin-right: 1em;
}

.sb3-custom-infoblock .infoblock-insidewrapper .infoblock-item .info-large {
    font-size: 120%;
}

.inpagetags {
    font-size: 85%;
    border-top: 1px solid #BBB;
    display: inline-block;
    margin: 10px 0 0;
    padding: 0 2px;
}

.inpagetags span {
    color: #b01;
    text-decoration: none;
    cursor: pointer;
}

[[/module]]

[[module ListPages range="." wrapper="no" separate="no"]]
[[%%content{0}%%module css]]

.sb3-custom-infoblock .latestcomments a {
  color: black;
}

.sb3-custom-infoblock .latestcomments a::after {
  font-family: "Font Awesome 5 Free";
  content: "\f075";
  margin-left: 2px;
  font-size: 105%;
  font-weight: bold;
}


.sb3-custom-infoblock .latestcomments a[href*="wikidot.com/user:info/%%created_by_unix%%"]::after {
  font-family: "Font Awesome 5 Free";
  content: "\f3e5";
  margin-left: 2px;
  font-size: 105%;
  font-weight: bold;
}
