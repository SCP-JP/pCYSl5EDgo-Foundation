<script>
$(document).ready(() => {
  $('#buttons').show()
  $('#saving').hide()
  $('#fuck').hide()

  $('#cancel').on('click', () => {
    $('#buttons').hide()
    $('#saving').hide()
    $('#fuck').show()
  })

  $('#retry').on('click', () => {
    $('#buttons').hide()
    $('#saving').show()
    $('#fuck').hide()
    setTimeout(() => {
      $('#buttons').show()
      $('#saving').hide()
      $('#fuck').hide()
    }, 3000)
  })
})
</script>

