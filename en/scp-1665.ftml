[[module CSS]]
div.box {
    border: 1px solid black;
    background: white;
    padding: 0.5rem;
    margin: 0.5rem;
    flex-basis: 50%;
}

div.clues {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-evenly;
